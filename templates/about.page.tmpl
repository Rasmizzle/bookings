{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="column">
                <h1>This is the about page</h1>
                <p>This is some text</p>

                <p>This paragraph is genereted from template: {{index .StringMap "test"}}</p>

                <p>
                    {{if ne (index .StringMap "remote_ip") ""}}
                        Your remote IP address is: {{index .StringMap "remote_ip"}}
                    {{else}}
                        Your remote IP address could not be identified.
                    {{end}}
                </p>
            </div>
        </div>
    </div>
{{end}}
